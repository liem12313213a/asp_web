@model Supplier 
<div class="container">
    <h3>Thông tin cụ thể của hóa đơn</h3>
    <form method="post" asp-action="Details">
        <input asp-for="supplier_Id" type="hidden" />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="supplier_date">Ngày lập hóa đơn</label>
            <input asp-for="supplier_date" type="date" class="form-control" disabled />
            <span asp-validation-for="invoice_date" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="phone_number">Số hóa đơn</label>
        </div>
    </form>
</div>