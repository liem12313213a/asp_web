@model Order

<div class="container">
    <h3>Bạn có chắc chắn là muốn xóa đơn hàng này?</h3>
    <form method="post" asp-action="DeleteConfirm">
        <input asp-for="order_Id" type="hidden" />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="order_date">Ngày đặt hàng</label>
            <input asp-for="order_date" type="date" class="form-control" disabled />
            <span asp-validation-for="order_date" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="total_amount">Tổng giá trị</label>
            <input asp-for="total_amount" type="number" class="form-control" disabled />
            <span asp-validation-for="total_amount" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="supplier">Nhà cung cấp</label>
            <input asp-for="supplier" type="text" class="form-control" disabled />
            <span asp-validation-for="supplier" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="order_status">Tình trạng đơn hàng</label>
            <input asp-for="order_status" type="text" class="form-control" disabled />
            <span asp-validation-for="order_status" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}